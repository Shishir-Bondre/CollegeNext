/* Media Queries */
@media screen and (max-width: 77em) {
	
	.outer-nav1.top {
		top: 15%;
	}

	.outer-nav1.bottom {
		bottom: 15%;
	}
}

@media screen and (max-width: 36.625em), screen and (max-height: 41.75em) {

	.outer-nav1.top {
		top: 5%;
	}

	.outer-nav1.bottom {
		bottom: 5%;
	}
	
	.outer-nav1.horizontal {
		font-size: 1.7em;
		width: 6.2em;
	}

	.outer-nav1.horizontal a {
		display: block;
		text-align: left;
	}

	/* Special Case */
	.effect-rotatetop .outer-nav1.horizontal {
		width: 95%;
		bottom: auto;
		top: 50%;
	}

	.effect-rotatetop .outer-nav1.horizontal a {
		display: inline-block;
	}

}

@media screen and (max-width: 31em), screen and (max-height: 36.2em) {
	.outer-nav1.horizontal,
	.outer-nav1.vertical {
		font-size: 1.2em;
		width: 6.8em;
	}

	.outer-nav1.right {
		right: auto;
		left: 50%;
	}
}

@media screen and (max-height: 31.6em) {
	.outer-nav1 a {
		margin-bottom: 20px;
	}
}